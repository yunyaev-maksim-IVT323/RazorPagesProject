@page
@model RazorPagesProjectGeneral.Pages.Images.AddModel
@{
    ViewData["Title"] = "Add"; 
    var photoPath = $"/all_images/{Model.Image.Path}";
}
<form method="post" class="mt-3" enctype="multipart/form-data" asp-page-handler="OnPost">
<div class="col col-lg-3">
    <div>
        <img class="card-img-top imageThumbnail border border-primary" <!--src="photoPath"-->
        <div class="custom-file">
            <input asp-for="Photo" class="custom-file-input form-control"></input>
            <label class="custom-file-label text-left">Загрузите необходимое изображение</label>
            <button type="submit" class="btn btn-success buttonShadow">Загрузить</button>
        </div>
    </div>
</div>
</form>